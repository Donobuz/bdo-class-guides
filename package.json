{
  "name": "bdo-class-guides-bot",
  "version": "1.0.0",
  "description": "Discord bot for Black Desert Online character class guides",
  "main": "index.js",
  "scripts": {
    "start": "node deploy-commands.js && node index.js",
    "start:dev": "node index.js",
    "dev": "nodemon index.js",
    "deploy": "node deploy-commands.js",
    "start-all": "npm run deploy && npm start",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "discord",
    "bot",
    "black-desert-online",
    "bdo",
    "gaming"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.3.1",
    "mongodb": "^6.20.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "commands/**/*.js",
      "utils/**/*.js",
      "!**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=16.9.0"
  }
}
